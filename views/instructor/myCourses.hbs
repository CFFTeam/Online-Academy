{{!-- table data --}}
<div class = "my-course">
<div class = "heading">
    <span>My Courses</span>
    <a href = "/instructor/add-course-description" class = "new-course-btn"> <img src="/assets/svg/instructor/newcourse.svg" alt="new-course"> New Course</a>
</div>
<table class="table table-striped custom-table">
  <thead>
     <tr>
      <th width = "2.7%" scope="col" >#</th>
      <th width = "47.3%" scope="col" >Title</th>
      <th width = "19%" scope="col" >Category</th>
      <th width = "5.4%" scope="col">Price</th>
      <th width = "12%" scope="col">Released</th>
      <th width = "5%" scope="col">Status</th>
      <th></th>
      <th ></th>
    </tr>
  </thead>
  <tbody>
    {{#if this.empty}}
      <div class="card-body">
         No data found!
      </div>
      {{else}}
        {{#each this.courseList}}
        <tr>
        <th scope="row">{{index}}</th>
        <td>{{name}}</td>
        <td>{{category}}</td>
        <td><span class = "dollar">$</span>{{price}}</td>
        <td>{{format_date date}}</td>
        {{#if finish}}
          <td style = "text-align: right;"><img src="/assets/svg/instructor/finish.svg" alt="finish"></td>
          {{else}}
           <td style = "text-align: right;"><img src="/assets/svg/instructor/unfinished.svg" alt="finish"></td>
        {{/if}}
        <td style = "text-align: right;"><a class = "edit-btn"><img src="/assets/svg/instructor/edit.svg" alt="edit"></a></td>
        <td style = "text-align: right;"><a class = "delete-btn"><img src="/assets/svg/instructor/delete.svg" alt="delete"></a></td>
        </tr>
        {{/each}}
    {{/if}}
  </tbody>
</table>
</div>
