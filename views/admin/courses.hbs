<div
  class="card border-0"
  style="width:95%; justify-content: center; margin-left:3.3rem;"
>

  <div class="card-header border-0 bg-white pt-0 px-0">
    <div
      style="display:flex; justify-content: space-between; align-items:center; padding-top: 1.5rem;"
    >
      <h1 style="font-weight:700;">Course</h1>
      <label>
        <input class="input1" type="text" placeholder="Search any courses" />
      </label>
    </div>
    <div class="dropdown pt-5">
      <button
        type="button"
        class="btn btn-success dropdown-toggle"
        data-toggle="dropdown"
        style="background-color: #00A551; font-size: 1.6rem; font-weight: 600; padding: 1rem;"
      >
        Select category
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="/admin/courses">All categories</a>
        {{#each this.category}}
          <a
            class="dropdown-item"
            href="/admin/courses/category?slug={{slug}}"
          >{{title}}</a>
        {{/each}}
      </div>
    </div>

  </div>
  <table id="course" class="cor">

      <tr class="none-shawdow">
        <th>ID</th>
        <th>Category</th>
        <th style="padding-right: 10rem;">Course name</th>
        <th style="width: 1rem;"></th>
        <th style="width: 1rem;"></th>
      </tr>

      {{#each this.courses}}
        <tr>
          <td class="id">{{_id}}</td>
          <td class="name">{{category}}</td>
          <td class="name">{{name}}</td>

          <td
            style="text-align: center; padding: 0 1rem;"
            data-toggle="modal"
            data-target="#myModal"
          >
            <img src="/assets/svg/admin/info.svg" alt="info-icon" />
          </td>

          <td class="delete" style="text-align: center; padding: 0 1rem;">
            <a href="/admin/courses/delete/{{_id}}">
              <img src="/assets/svg/admin/delete.svg" alt="delete-icon" />
            </a>
          </td>

        </tr>
      {{/each}}

  </table>

  <div class="modal" id="myModal">
    <div
      class="modal-dialog"
      style="top: 50% !important; transform: translateY(-70%) !important"
    >
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header" style="border:none; padding: 1rem 0 0 1rem;">
          <h4
            style="color:#00A551; font-weight: 700;margin: 0.5rem;"
          >Detail</h4>
        </div>

        <!-- Modal body -->
        <div class="modal-body" style="margin: 0 auto 1rem auto; padding: 0;">
          <table class="not">
            <tr>
              <td><b>ID: </b></td>
              <td>1 </td>
            </tr>
            <tr>
              <td><b>Name:</b></td>
              <td>Python beginner to master </td>
            </tr>
            <tr>
              <td><b>Category: </b></td>
              <td>Web App Development </td>
            </tr>
            <tr>
              <td><b>Teacher:</b> </td>
              <td>Jonas Schema </td>
            </tr>
            <tr>
              <td><b>Student quantity</b>: </td>
              <td>172.867</td>
            </tr>
            <tr>
              <td><b>Rate:</b> </td>
              <td
                style="display: flex; align-items: center; justify-content: space-between;"
              >
                <div>4.7</div>
                {{#times 5}}
                  <div>
                    <img src="/assets/svg/admin/star.svg" alt="star-icon" />
                  </div>
                {{/times}}
                <div>(15.279)</div>
              </td>
            </tr>
          </table>
        </div>

      </div>
    </div>
  </div>

</div>