<div class="card border-0" style="width:95%; margin-left:2rem;">

  <div class="card-header border-0 bg-white pt-0 px-0">
    <div
      style="display:flex; justify-content: space-between; align-items:center; padding-top: 1.5rem;"
    >
      <h1 style="font-weight:700;">Course</h1>
      <label>
        <input type="text" placeholder="Search" />
      </label>
    </div>
    <div class="dropdown pt-5">
      <button
        type="button"
        class="btn btn-success dropdown-toggle"
        data-toggle="dropdown"
        style="background-color: #00A551;"
      >
        Select category
      </button>
      <div class="dropdown-menu">
          <a
            class="dropdown-item"
            href="/admin/courses"
          >All categories</a>
        {{#each this.category}}
          <a
            class="dropdown-item"
            href="/admin/courses/category?slug={{slug}}"
          >{{title}}</a>
        {{/each}}
      </div>
    </div>

  </div>
